<div class="container" id="quiz">
    <h1>Â¿DÃ³nde nos escapamos?</h1>
    <p>Hoy tÃº decides nuestra prÃ³xima aventura âœ¨</p>
    <button onclick="nextQuestion()">Empezar</button>
</div>

<script>

let question = 0;

let scores = {
    monesterio:0,
    carnota:0,
    miluna:0,
    burgo:0
};

function nextQuestion(answer){

    if(answer){
        calculate(answer);
    }

    question++;

    const quiz = document.getElementById("quiz");

    switch(question){

        case 1:
            quiz.innerHTML = `
                <h2>Â¿CuÃ¡nto tiempo escapamos?</h2>
                <button onclick="nextQuestion('1dia')">ğŸŒ™ Un dÃ­a mÃ¡gico</button>
                <button onclick="nextQuestion('masdias')">ğŸŒ„ Dos dÃ­as o mÃ¡s</button>
            `;
        break;

        case 2:
            quiz.innerHTML = `
                <h2>Â¿CÃ³mo viajamos?</h2>
                <button onclick="nextQuestion('coche')">ğŸš— A nuestro ritmo</button>
                <button onclick="nextQuestion('tren')">ğŸš† En tren</button>
                <button onclick="nextQuestion('avion')">âœˆï¸ En aviÃ³n</button>
            `;
        break;

        case 3:
            quiz.innerHTML = `
                <h2>Â¿QuÃ© miramos al despertar?</h2>
                <button onclick="nextQuestion('cielo')">ğŸŒŒ El cielo</button>
                <button onclick="nextQuestion('montana')">â›° La montaÃ±a</button>
            `;
        break;

        case 4:
            quiz.innerHTML = `
                <h2>Nivel de experiencia</h2>
                <button onclick="nextQuestion('lujoso')">âœ¨ Lujoso</button>
                <button onclick="nextQuestion('lujazo')">ğŸ‘‘ Lujazo</button>
            `;
        break;

        case 5:
            showResults();
        break;
    }
}

function calculate(answer){

    switch(answer){

        case "1dia":
            scores.monesterio+=2;
            scores.miluna+=2;
        break;

        case "masdias":
            scores.carnota+=2;
            scores.burgo+=2;
        break;

        case "tren":
            scores.monesterio+=1;
            scores.carnota+=1;
        break;

        case "avion":
            scores.carnota+=2;
        break;

        case "coche":
            scores.miluna+=1;
            scores.burgo+=2;
        break;

        case "cielo":
            scores.monesterio+=2;
            scores.miluna+=2;
        break;

        case "montana":
            scores.carnota+=2;
            scores.burgo+=2;
        break;

        case "lujoso":
            scores.miluna+=2;
        break;

        case "lujazo":
            scores.miluna+=2;
            scores.carnota+=1;
            scores.monesterio+=1;
            scores.burgo+=1;
        break;
    }
}

function showResults(){

    const destinations = [
        {name:"Monesterio (Badajoz)", score:scores.monesterio},
        {name:"Nidos de Carnota (Galicia)", score:scores.carnota},
        {name:"Hotel Miluna (Toledo)", score:scores.miluna},
        {name:"Burgo de Osma (Soria)", score:scores.burgo}
    ];

    destinations.sort((a,b)=>b.score-a.score);

    let rankingHTML = `
        <h2>ğŸ† Tu ranking de destinos</h2>
        <div class="ranking">
    `;

    destinations.forEach((d,i)=>{
        let medal="";
        if(i===0) medal="ğŸ¥‡";
        if(i===1) medal="ğŸ¥ˆ";
        if(i===2) medal="ğŸ¥‰";
        if(i===3) medal="ğŸ’”";

        rankingHTML+= `<p>${medal} <strong>${d.name}</strong> â€” ${d.score} puntos</p>`;
    });

    rankingHTML+= `
        </div>
        <br>
        <h3>âœ¨ El destino ganador es:</h3>
        <h1>${destinations[0].name}</h1>
        <p>PrepÃ¡rateâ€¦ porque esto se hace realidad ğŸ’›</p>
    `;

    document.getElementById("quiz").innerHTML = rankingHTML;
}

</script>

